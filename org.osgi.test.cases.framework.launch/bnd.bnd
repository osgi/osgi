# Set javac settings from JDT prefs
-include: ${build}/eclipse/jdt.bnd

Bundle-Description					: Framework test cases.

Conditional-Package					= org.osgi.test.support.*
Private-Package						=  \
	${p}.junit
Import-Package: ${-signaturetest}, *
	
Include-Resource = \
    fragments.tb4.jar, \
	fragments.tb6.jar, \
	fragments.tb10.jar, \
	fragments.tb20.jar, \
	fragments.tb21.jar, \
	fragments.tb22.jar, \
    launch.tb1.jar, \
    launch.tb2.jar, \
    launch.tb3.jar, \
    launch.tb4.jar, \
    extensions.tb1.jar, \
    extensions.tb2.jar, \
    extensions.tb3.jar, \
    dependency.tb1.v1.jar, \
    dependency.tb1.v2.jar, \
    dependency.tb1.v3.jar, \
    dependency.tb2.v1.jar, \
    dependency.tb3.v1.jar, \
    dependency.tb4.v1.jar
	
Test-Cases							= ${testcases}
-signaturetest                      = org.osgi.framework.launch

-buildpath							= \
    org.osgi.test.support;                  version=project , \
	org.osgi.resource;						version=project	, \
	org.osgi.framework;						version=project	, \
	osgi.core;								version=4.3.1	, \
	osgi.cmpn;								version=4.3.1	, \
	${junit}

-runbundles							= \
	
-runframework = none

-runproperties = ${runproperties}, \
	${p}.storageroot=${target-dir}/${p}.testStorageRoot, \
	${p}.bundles=
