# Set javac settings from JDT prefs
-include: ${build}/eclipse/jdt.bnd, ${build}/osgi.ct.junit-platform.bnd, ${build}/osgi.ct.promise.bnd, ${build}/cmpn.bnd

-conditionalpackage                 = org.osgi.test.support.*
-privatepackage                     =  \
    ${p}.junit.*
Import-Package: ${-signaturetest}, *

-includeresource: \
    xml/ = resources/xmlresources/xml/ ,\
    / = resources/testresources/ ,\
    tb1.jar ,\
    tb1-nosrc.jar ,\
    tb2.jar ,\
    tb3.jar ,\
    tb4.jar

-buildpath = \
    org.osgi.test.support;          version=project, \
    org.osgi.service.repository;    version=project , \
    osgi.core;maven-scope=provided;version=5.0

-runbundles                         = \
    org.osgi.impl.service.repository; version=latest

-signaturetest                      = \
    org.osgi.service.repository

-runproperties = ${runproperties}

