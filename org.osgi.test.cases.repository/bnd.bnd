# Set javac settings from JDT prefs
-include: ${build}/eclipse/jdt.bnd, ${build}/osgi.tck.junit-platform.bnd, ${build}/osgi.tck.promise.bnd, ${build}/cmpn.bnd

-conditionalpackage                 = org.osgi.test.support.*
-privatepackage                     =  \
    ${p}.junit.*
Import-Package: ${-signaturetest}, *

-includeresource: \
    xml/ = resources/xmlresources/xml/ ,\
    / = resources/testresources/ ,\
    tb1.jar ,\
    tb1-nosrc.jar ,\
    tb2.jar ,\
    tb3.jar ,\
    tb4.jar

-buildpath = \
    ${osgi.annotation.buildpath},\
    org.osgi.test.support;version=project, \
    org.osgi.framework;maven-scope=provided;version=1.8, \
    org.osgi.resource;maven-scope=provided;version=1.0, \
    org.osgi.util.tracker;maven-scope=provided;version=1.5, \
    org.osgi.service.repository;version=latest

-runbundles = \
    org.osgi.impl.service.repository; version=latest

-signaturetest                      = \
    org.osgi.service.repository

